<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Viettour</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" /> @*Layout css*@
    <link href="~/font/themify-icons/themify-icons.css" rel="stylesheet" />
    <link href="~/font/fontawesome-free-6.2.0-web/fontawesome-free-6.2.0-web/css/all.css" rel="stylesheet" />
    <link href="~/font/fontawesome-free-6.2.0-web/fontawesome-free-6.2.0-web/css/all.min.css" rel="stylesheet" />
   
</head>
<body>
    
    <header>
        <nav class="navbar ">
            <div class="container">
                <a class="navbar-brand" asp-route="home/index"><img class="img" src="~/image/logo.png" alt="Viettour_Logo" /></a>             
                
                <div class="navbar-middle ">

                    @*Begin: Nav-item*@
                    <ul class="navbar-nav">
                        <li class="nav-item"> 
                            <a class="nav-link " asp-route="home/index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-route="tour">Du lịch</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-route="home/about">Giới thiệu</a>
                        </li>
                    </ul>
                    @*End : Nav-item*@
                    
                        @*Begin : Search button*@
                        <div class="search-btn">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </div>
                        @*End : Search button*@

                        @*Begin: Login button*@
                        <a class="login-button" asp-route="user/login">Đăng nhập</a>
                        @*End : Login button*@
                        @*asp-area="" asp-controller="User" asp-action="LogIn"*@

                   
                   
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <div class="container">
            <a class="foot-content">
                Copyright © 2022. Viettour. All Rights Reserved</a>
        </div>       
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
