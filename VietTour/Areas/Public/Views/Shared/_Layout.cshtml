<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Viettour</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" /> @*Layout css*@
    <link href="~/font/themify-icons/themify-icons.css" rel="stylesheet" />
    <link href="~/font/fontawesome-free-6.2.0-web/fontawesome-free-6.2.0-web/css/all.css" rel="stylesheet" />
    <link href="~/font/fontawesome-free-6.2.0-web/fontawesome-free-6.2.0-web/css/all.min.css" rel="stylesheet" />
</head>
<body>
    
    <header>
        <nav class="navbar ">
            <div class="container">
                <a class="navbar-brand" asp-route="home/index"><img class="img" src="~/image/logo.png" alt="Viettour_Logo" /></a>             
                
                <div class="navbar-middle ">

                    @*Begin: Nav-item*@
                    <ul class="navbar-nav">
                        <li class="nav-item"> 
                            <a class="nav-link " asp-area="public" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="public"  asp-controller="Tour" asp-action="Details">Du lịch</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="public" asp-controller="Home" asp-action="About">Giới thiệu</a>
                        </li>
                    </ul>
                    @*End : Nav-item*@
                    
                        @*Begin : Search button*@
                        <div class="search-btn">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </div>
                        @*End : Search button*@

                        @*Begin: Login button*@
                        <a class="login-button" asp-area="public" asp-controller="User" asp-action="Login">Đăng nhập</a>
                        @*End : Login button*@
                        @*asp-area="" asp-controller="User" asp-action="LogIn"*@

                   
                   
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @*<footer class="footer">
        <div class="container">
            <a class="foot-content">
                Copyright © 2022. Viettour. All Rights Reserved</a>
        </div>       
    </footer>*@
	<footer class="text-white footer">
		<div class="footer-top">
			<div class="container">
                <div class="links-list">
                    <p class="fw-bold title">Liên kết trang</p>
                    <div class="content">
                        <ul class="content-list">
                            <li class="content-item"><a href="">Trang chủ</a></li>
                            <li class="content-item"><a href="">Du lịch</a></li>
                            <li class="content-item"><a href="">Về chúng tôi</a></li>
                        </ul>
                    </div>
                </div>
                <div class="support">
                    <p class="fw-bold title">Hỗ trợ</p>
                    <div class="content">
                        <ul class="content-list">
                            <li class="content-item"><a href="">Hỗ trợ khách hàng</a></li>
                            <li class="content-item"><a href="">Chính sách bảo mật</a></li>
                        </ul>
                    </div>
                </div>
				<div class="contact">
                    <p class="fw-bold title">Liên hệ chúng tôi</p>
                    <div class="content">
                        <ul class="content-list">
                            <li class="contact-item">
                                <i class="fa-solid fa-phone"></i>
                                <a href="tel:+0968072139" class="contact-link">0968 072 139</a>
                            </li>
                            <li class="contact-item">
                                <i class="fa-solid fa-envelope"></i>
                                <a href="mailto:info@viettour.com" class="contact-link">info@viettour.com</a>
                            </li>
                        </ul>
                    </div>
				</div>
			</div>
		</div>
		<div class="footer-bottom">
			<div class="container">
                <div class="copyright">Copyright © 2022 Viettour</div>
                <div class="social-media-icons">
                    <a href=""><i class="fa-brands fa-facebook"></i></a>
                    <a href=""><i class="fa-brands fa-instagram"></i></a>
                    <a href=""><i class="fa-brands fa-youtube"></i></a>
                </div>
            </div>
		</div>
	</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
