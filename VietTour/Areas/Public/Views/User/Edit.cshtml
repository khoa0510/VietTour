@{
	ViewData["Title"] = "Edit";
}
@*HTML for Edit User's' Information page - User/Edit*@

@*Import*@
<link href="~/css/EditUser.css" rel="stylesheet" />

@model UserDetailViewModel

<body>
	<div class="main">
		<div id="choice-sidebar" class="column-1">
			<a href="" id="choice-1" class="option user-option-1">Cập nhật thông tin cá nhân</a>
			<a href="" id="choice-2" class="option user-option-2">Thay đổi mật khẩu</a>
		</div>
		<div class="column-2">
			<div class="content">
				<h4 class="fw-bold text-align-center title-heading">Thông tin cá nhân</h4>
				<p class="fw-bold" style="margin-top: 1rem;">Cập nhật thông tin cá nhân</p>
				<form action="" class="user-form">
					<div class="form-group">
						<label>Tên của bạn <span style="color:red">*</span></label>
						<input type="text" id="user-name" class="form-control">
					</div>
					<div class="form-group">
						<label>Số điện thoại <span style="color:red">*</span></label>
						<input type="tel" id="user-phone-num" class="form-control">
					</div>
					<div class="form-group">
						<label>Email của bạn</label>
						<input type="email" id="user-email" class="form-control">
					</div>
					<div class="form-group">
						<label>Địa chỉ <span style="color:red">*</span></label>
						<input type="text" id="user-address" class="form-control">
					</div>
				</form>
				<a href="#" class="btn btn-blue submit-button">Cập nhật</a>
			</div>
		</div>
	</div>
</body>
