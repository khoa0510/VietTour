@{
	ViewData["Title"] = "Change password";
}
@*HTML for Change password page - User/ChangePassword*@

@*Import*@
<link href="~/css/ChangePassword.css" rel="stylesheet" />

<body>
	<div class="main">
		<div id="choice-sidebar" class="column-1">
			<a href="" id="choice-1" class="option user-option-1">Cập nhật thông tin cá nhân</a>
			<a href="" id="choice-2" class="option user-option-2">Thay đổi mật khẩu</a>
		</div>
		<div class="column-2">
			<div class="content">
				<h4 class="fw-bold text-align-center title-heading">Thay đổi mật khẩu</h4>
				<form action="" class="user-form">
					<div class="form-group">
						<label>Mật khẩu mới<span style="color:red"> *</span></label>
						<input type="text" id="user-name" class="form-control">
					</div>
					<div class="form-group">
						<label>Nhập lại mật khẩu<span style="color:red"> *</span></label>
						<input type="tel" id="user-phone-num" class="form-control">
					</div>
				</form>
				<a href="#" class="btn btn-blue submit-button">Cập nhật</a>
			</div>
		</div>
	</div>
</body>