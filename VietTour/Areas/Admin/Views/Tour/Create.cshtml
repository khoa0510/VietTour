
@{
    ViewData["Title"] = "Tour";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model CreateTourViewModel
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">THÊM TOUR</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->

    <form action="~/Admin/Home/Index" method="post" enctype="multipart/form-data" >
        <div class="card-body">
            <input type="hidden" name="TourId" @*value="@Model.TourId"*@/>
            <div class="form-group">
                <label for="TourName">Tên Tour</label>
                <input type="text" class="form-control" id="TourName" name="TourName" @*value="@Model.TourName"*@ placeholder="Nhập tên Tour">
            </div>

            <div class="form-group">
                <label for="Summary">Mô tả ngắn</label>
                <textarea class="form-control" id="Summary" name="Summary" @*value="@Model.Summary"*@></textarea>
            </div>

            <div class="form-group">
                <label for="ProvinceId">Vùng miền</label>
                <textarea class="form-control" id="ProvinceId" name="ProvinceId" @*value="@Model.ProvinceId"*@></textarea>
            </div>

            <div class="form-group">
                <label for="Picture">Hình ảnh</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="form-control" id="Picture">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Price">Giá Tour</label>
                <input type="number" class="form-control" id="Price" name="Price" @*value="@Model.Price"*@ placeholder="Nhập giá Tour">
            </div>

            <div class="form-group">
                <label for="Description">Nội dung</label>
                <textarea class="form-control summernote" id="Description" name="Description" @*value="@Model.Description"*@></textarea>
            </div>
        </div>
        <!-- /.card-body -->
        @*Lưu*@
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </form>
</div>
@section Js{
    <!-- Summernote -->
    <script src="../../plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('.summernote').summernote()
        })
    </script>
}
@section Css{
    <!-- summernote -->
    <link rel="stylesheet" href="../../plugins/summernote/summernote-bs4.min.css">
}